<resources>
    <!-- Base application theme. -->
    <style name="Theme.Jambo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Background & Surface-->
        <item name="backgroundColor">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customizations-->
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/jambo_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Jambo</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="checkedIconTint">@color/chip_check_color_state</item>
        <item name="chipBackgroundColor">@color/chip_bg_color_state</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_state</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">true</item>
    </style>

</resources>